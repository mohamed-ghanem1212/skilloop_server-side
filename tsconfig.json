{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "commonjs",
    "moduleResolution": "node",

    "target": "es2019",

    "types": ["node"],

    "strict": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "sourceMap": true,

    "skipLibCheck": true
  },
  "include": ["src", "client.ts"]
}
